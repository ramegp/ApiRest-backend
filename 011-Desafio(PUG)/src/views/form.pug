html 
    head
        title "Entrada de datos de productos"
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    body 
        div(class="container")
            h1(class="center-align") Carga de productos
            form(action="/api/productos/cargar" method="GET" class="row teal" style="padding: 10px; display:flex; flex-direction: column;")
                label Titulo
                input(type="text" name="title" id="" placeholder="title" required)
                label Price
                input(type="number" name="price" id="" placeholder="price" min="0" required)
                label Url direccion
                input(type="text" name="img" id="" placeholder="direccion de la foto" required)
                div(style="display: flex; justify-content: center;")
                    button(class="btn waves-effect waves-light" type="submit" name="action" style="width: 150px;") send
                        <i class="material-icons right">send</i>