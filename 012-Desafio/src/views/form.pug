html 
    head
        title "Entrada de datos de productos"
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        link(rel="stylesheet" href="/style.css")
    body(class="grey lighten-2")
        div(class="container ")
            h1(class="center-align titulo-form") Carga de productos
            form(action="/api/productos/cargar" method="GET" class="row teal lighten-1 form" style="padding: 10px; display:flex; flex-direction: column;")
                label(class="grey-text text-darken-3 label-form") Titulo
                input(class="input-form" type="text" name="title" id="" placeholder="Title,Ej: Bilardo" required)
                label(class="grey-text text-darken-3 label-form") Price
                input(type="number" name="price" id="" placeholder="Price, Ej: 70" min="0" required)
                label(class="grey-text text-darken-3 label-form") Url direccion
                input(type="text" name="img" id="" placeholder="Direccion de la foto" required)
                div(style="display: flex; justify-content: center;")
                    button(class="btn waves-effect waves-light" type="submit" name="action" style="width: 150px;") send
                        <i class="material-icons right">send</i>

        div(class="container vista-products")
            each prod in productos
                div(class="producto-card")
                    div(class="producto-card-titulo")=prod.title
                    div(class="producto-card-info")
                        div=prod.price 
                        img(src=`${prod.thumbnail}`, alt="" class="producto-card-img")

                